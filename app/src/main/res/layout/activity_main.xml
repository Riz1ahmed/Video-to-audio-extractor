<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name"
        app:layout_constraintBottom_toTopOf="@+id/btn_audio_picker"
        app:layout_constraintEnd_toEndOf="@+id/btn_audio_picker"
        app:layout_constraintStart_toStartOf="@+id/btn_audio_picker" />

    <Button
        android:id="@+id/btn_audio_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start process"
        app:layout_constraintEnd_toEndOf="@+id/btn_audio_picker"
        app:layout_constraintStart_toStartOf="@+id/btn_audio_picker"
        app:layout_constraintTop_toBottomOf="@+id/btn_audio_picker" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play audio"
        app:layout_constraintEnd_toEndOf="@+id/btn_process"
        app:layout_constraintStart_toStartOf="@+id/btn_process"
        app:layout_constraintTop_toBottomOf="@+id/btn_process" />

    <TextView
        android:id="@+id/txt_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percent"
        app:layout_constraintBottom_toTopOf="@+id/txt_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_name"
        app:layout_constraintStart_toStartOf="@+id/txt_name" />

</androidx.constraintlayout.widget.ConstraintLayout>